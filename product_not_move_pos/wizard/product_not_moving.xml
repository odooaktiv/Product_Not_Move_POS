<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_not_moving_form_view" model="ir.ui.view">
        <field name="model">product.not.move.pos.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button string='Print' name="print_product_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_not_moving_wizard_action" model="ir.actions.act_window">
        <field name="name">Printing Product Not Move POS</field>
        <field name="res_model">product.not.move.pos.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Product Not Move POS" id="product_not_moving" parent="point_of_sale.menu_point_rep"
              action="product_not_moving_wizard_action" groups="point_of_sale.group_pos_manager"/>
</odoo>